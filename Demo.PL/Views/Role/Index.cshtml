@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Roles";
}

<a class="mt-3 p-3 alert-light btn btn-sucess" asp-action="Create">Create New Role</a>

<div calss="row mt-5 content-center align-center">
    <form class="col-8 row" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="SearchValue" placeholder="Search by Role Name"/>
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(R => R.RoleName)</td>
                <td>@Html.DisplayNameFor(R => R.Id)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>

        </thead>

        <tbody>
            @foreach (var role in @Model)
            {
                <tr>
                    <td>@role.RoleName</td>
                    <td>@role.Id</td>
                    

                    <td>
                        <a class="btn btn-warning" asp-action="Details" asp-route-id="@role.Id">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id=@role.Id>
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Id">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-3 alert alert-danger">
        <h1>There are no Roles</h1>
    </div>
}
