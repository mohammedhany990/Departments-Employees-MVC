@model DepartmentViewModel
@{
    ViewData["Title"] = "Details";
}

<h1 class="alert alert-heading">Details of Department</h1>

<div class="form-group">
    <label class="col-form-label" asp-for="Code"></label>
    <input asp-for="Code" class="form-control" readonly/>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" readonly />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="DateOfCreatoin"></label>
    <input asp-for="DateOfCreatoin" class="form-control" readonly />
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Home</a>