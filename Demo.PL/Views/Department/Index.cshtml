@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "All Departments";
}
<a asp-action="Create" class="mt-3 p-3 btn btn-danger bg-success">Create new department</a>
@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D=> D.Code)</td>
                <td>@Html.DisplayNameFor(D=> D.Name)</td>
                <td>@Html.DisplayNameFor(D=> D.DateOfCreatoin)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreatoin</td>

                    <td>
                        <a class="btn btn-warning" asp-action="Details" asp-route-id="@department.Id">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id=@department.Id>
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@department.Id">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert alert-danger">
        <h1>There are no departments :( </h1>
    </div>
}
