@model AccountViewModel
@{
    ViewData["Title"] = "Registeration";
    Layout = "~/Views/Shared/_RegisterationLayout.cshtml";
}

<h1>Registeration</h1>


<div class="main-agileinfo">
    <div class="agileits-top">
        <div asp-validation-summary="All"></div>

        <form asp-action="Registeration">
            <input  asp-for="FName" placeholder="first name" required="">
            <input  asp-for="LName" placeholder="last name" required="">
            <input   asp-for="Email" placeholder="Email" required="">
            <input  asp-for="Password" placeholder="Password" required="">
            <input  asp-for="ConfirmedPassword" placeholder="Confirm Password" required="">

            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="IsAgree" class="checkbox" required="">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP">
        </form>
        <p>Do you have an Account? <a asp-action="Login"> Login Now!</a></p>
    </div>
    <!-- copyright -->
    <div class="colorlibcopy-agile">
        <p>© 2018 Colorlib Signup Form. All rights reserved | Design by <a href="https://colorlib.com/" target="_blank">Colorlib</a></p>
    </div>
    <!-- //copyright -->
    <ul class="colorlib-bubbles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
