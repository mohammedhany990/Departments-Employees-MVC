@model EmployeeViewModel
@{
    // To give it to asp-items in select tag to show list of departments
    var departments = new SelectList(ViewBag.Departments, "Id", "Name");
}
<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="age"></label>
    <input asp-for="age" class="form-control" />
    <span asp-validation-for="age" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="HireDate"></label>
    <input asp-for="HireDate" class="form-control" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="IsActive"></label>
    <input asp-for="IsActive" class="form-control" />
</div>

<div class="form-group" >
    <label class="col-form-label" asp-for="Image" ></label>
    <input asp-for="Image" class="form-control" />
</div>

<div class="form-group" >
    <label class="col-form-label" asp-for="Department"></label>

    <select class="form-group" asp-items="departments" asp-for="DepartmentId">
        <option value="@null">-- Select Department --</option>
    </select>
</div>


